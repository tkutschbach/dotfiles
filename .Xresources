
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: true
Xft.hintstyle: hintfull
Xft.lcdfilter: lcdfilter

XTerm*renderFont: true
XTerm*faceName: xft:LiberationMono:style=medium:size=12, \
                xft:Monospace:style=Medium:size=12   
XTerm*faceSize: 11
XTerm*utf8: 2
XTerm*locale: true

XTerm.vt100.translations: #override \n\
  Shift Ctrl <Key>j: smaller-vt-font() \n\
  Shift Ctrl <Key>k: larger-vt-font() \n\
	Ctrl <Key>j: scroll-forw(1) \n\
	Ctrl <Key>k: scroll-back(1)


! Every shell is a login shell by default (for inclusion of all necessary environment variables)
XTerm*loginshell: true
XTerm*termName: xterm-color
XTerm*eightBitInput: false
XTerm*scrollBar: false
XTerm*savelines: 16384
XTerm*selectToClipboard: true

! double-click to select whole URLs :D
XTerm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

! FOR ALL OTHER PROGRAMS USE XRESOURCES
! This includes xterm and urxvt
*.background: #383c4a
*.foreground: #D2D2D2

!black
*color0: #383c4a
*color8: #404552

!red
*color1: #9A4138
*color9: #E7766B

!green
*color2: #4BEC90
*color10: #3CBF75

!yellow
*color3: #D8D782
*color11: #CFCD63

!blue
*color4: #5294e2
*color12: #579CEF

!magenta
*color5: #CE50DD
*color13: #E7766B

!cyan
*color6: #6BE5E7
*color14: #90FDFF

!white
*color7: #CCCCCC
*color15: #FFFFFF
